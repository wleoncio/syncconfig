{
    "For loop": {
        "prefix": "for",
        "body": [
            "for ($1 in $2) {$3}"
        ],
        "description": "for loop"
    },
    "If statement": {
        "prefix": "if",
        "body": [
            "if ($1) {$2}"
        ],
        "description": "if statement"
    },
    "If-else statement": {
        "prefix": "ifel",
        "body": [
            "if ($1) {$2} else {$3}"
        ],
        "description": "if/else statement"
    },
    "Roxygen entry": {
        "prefix": "rox",
        "body": "#' @",
        "description": "Roxygen snippet"
    },
    "Roxygen skeleton": {
        "prefix": "skeleton",
        "body": [
            "#' @title $1",
            "#' @description $2",
            "#' @param $3",
            "#' @return $4",
            "#' @author Waldir Leoncio $5",
            "#' @export",
            "#' @examples"
        ],
        "description": "Roxygen skeleton"
    },
    "Roxygen data skeleton": {
        "prefix": "roxydata",
        "body": [
            "#' $2",
            "#' @name $1",
            "#' @docType data",
            "NULL"
        ]
    },
    "Browser": {
        "prefix": "bro",
        "body": "browser($1) # TEMP. Tip: browserText()",
        "description": "Call to browser with #TEMP tag"
    },
    "Print debug": {
        "prefix": "pt",
        "body": "print(\"$1\") # TEMP",
        "description": "Add print() with #TEMP tag"
    },
    "Todo": {
        "prefix": "tod",
        "body": "# TODO: ",
        "description": "Add todo comment"
    },
    "Fix": {
        "prefix": "fix",
        "body": "# FIXME: ",
        "description": "Add bug comment"
    },
    "Temp": {
        "prefix": "temp",
        "body": "# TEMP",
        "description": "Add temporary comment"
    },
    "Suggestion": {
        "prefix": "sugg",
        "body": "# SUGGEST: ",
        "description": "Add suggestion comment"
    },
    "Ask": {
        "prefix": "ask",
        "body": "# ASK: ",
        "description": "Add ask comment"
    },
    "H1 comment": {
        "prefix": "sec",
        "body": "# $1 ===========================================================================",
        "description": "Section"
    },
    "H2 comment": {
        "prefix": "subsec",
        "body": "# $1 -------------------------------------------------------------------------",
        "description": "Subsection"
    },
    "Assignment": {
        "prefix": ["<-", "ass", "z-"],
        "body": "<- $1",
        "description": "Assignment operator"
    },
    "Conditional print debugging": {
        "prefix": "ifpt",
        "body": "if ($1) { print($2) } # TEMP"
    },
    "Conditional browsing": {
        "prefix": "ifbro",
        "body": "if ($1) { browser() } # TEMP"
    }
}
