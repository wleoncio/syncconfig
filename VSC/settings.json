{
    // Language-specific
    "[git-commit]": {
        "editor.rulers": [
            {
                "color": "#ff0000",
                "column": 50
            }
        ]
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.rulers": []
    },
    "alignment.chars": {
        "<-": {
            "spaceAfter": 1,
            "spaceBefore": 1
        }
    },
    "cSpell.enabled": false,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "graphql",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "jupyter",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "python",
        "pug",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "swift",
        "text",
        "typescript",
        "typescriptreact",
        "vue",
        "yaml",
        "yml",
        "r"
    ],
    "comment-divider.length": 60,
    "comment-divider.mainHeaderAlign": "left",
    "comment-divider.mainHeaderFiller": "=",
    "comment-divider.mainHeaderHeight": "line",
    "comment-divider.subheaderAlign": "left",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "diffEditor.wordWrap": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.fontWeight": "normal",
    "editor.guides.bracketPairs": "active",
    "editor.inlayHints.enabled": "off",
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "left",
    "editor.minimap.size": "fit",
    "editor.mouseWheelZoom": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "all",
    "editor.rulers": [
        {
            "color": "#ff0000",
            "column": 80
        }
    ],
    "editor.scrollBeyondLastColumn": 0,
    "editor.showFoldingControls": "always",
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "top",
    "editor.tabSize": 2,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                // Find scope values by running the following on the code file:
                // Developer: Inspect Editor Tokens and Scopes
                "scope": [
                    "meta.function-call.arguments.r",
                    "keyword.operator.assignment.r",
                    "punctuation.separator.parameters.r"
                ],
                "settings": {
                    "fontStyle": "normal",
                    "foreground": "#f29668"
                }
            },
            {
                "scope": [
                    "constant.language.r"
                ],
                "settings": {
                    "fontStyle": "normal",
                    "foreground": "#7e7e7e"
                }
            },
            {
                "scope": [
                    "constant.numeric.float.decimal.r"
                ],
                "settings": {
                    "fontStyle": "normal",
                    "foreground": "#5153b3"
                }
            },
            {
                "scope": [
                    "support.function.r"
                ],
                "settings": {
                    "fontStyle": "normal",
                    "foreground": "#4381c9"
                }
            },
            {
                "scope": [
                    "variable.parameter.r",
                    "variable.other.r"
                ],
                "settings": {
                    "fontStyle": "normal",
                    "foreground": "#dfeeff"
                }
            }
        ]
    },
    "editor.wordWrap": "off",
    "explorer.compactFolders": false,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.docker": "Dockerfile"
    },
    "files.autoGuessEncoding": true,
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git-graph.commitDetailsView.location": "Docked to Bottom",
    "git-graph.dialog.createBranch.checkOut": true,
    "git-graph.repository.commits.fetchAvatars": true,
    "git-graph.repository.fetchAndPrune": true,
    "git-graph.showStatusBarItem": false,
    "git.autofetch": true,
    "git.checkoutType": [
        "local"
    ],
    "git.suggestSmartCommit": false,
    "html.preview.doubleClickToSwitchToEditor": false,
    "julia.enableTelemetry": false,
    "julia.symbolCacheDownload": true,
    "latex-workshop.bibtex-format.tab": "tab",
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.outDir": "./",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.outline.commands": [],
    "latex-workshop.view.pdf.viewer": "tab",
    "markdown.extension.print.theme": "dark",
    "markdown.extension.tableFormatter.enabled": true,
    "markdown.extension.toc.levels": "1..1",
    "markdown.extension.toc.orderedList": true,
    "markdown.marp.enableHtml": true,
    "markdown.marp.exportType": "html",
    "markdown.marp.themes": [
        "./themes/uio-light.css",
        "./themes/uio-dark.css"
    ],
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "notebook.lineNumbers": "on",
    "outline.icons": false,
    "r.alwaysUseActiveTerminal": true,
    "r.bracketedPaste": true,
    "r.lsp.diagnostics": false,
    "r.lsp.promptToInstall": false,
    "r.rpath.linux": "/usr/bin/R",
    "r.rterm.linux": "/usr/bin/radian",
    "r.sessionWatcher": true,
    "scm.defaultViewMode": "tree",
    "security.workspace.trust.untrustedFiles": "open",
    "task.saveBeforeRun": "prompt",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.tabs.location": "left",
    "todo-tree.general.revealBehaviour": "start of todo",
    "todo-tree.general.statusBar": "tags",
    "todo-tree.general.statusBarClickBehaviour": "reveal",
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "TEMP",
        "ASK",
        "SUGGEST",
        "[ ]",
        "[x]"
    ],
    "todo-tree.highlights.customHighlight": {
        "ASK": {
            "background": "#FFCA02",
            "foreground": "#000",
            "iconColour": "#FFCA02",
            "icon": "question"
        },
        "FIXME": {
            "background": "#F00",
            "foreground": "#FFF",
            "iconColour": "#F00",
            "icon": "alert",
            "type": "text",
            "gutterIcon": true
        },
        "TEMP": {
            "background": "#707070",
            "foreground": "#000",
            "iconColour": "#707070",
            "icon": "clock",
            "type": "line",
            "gutterIcon": true
        },
        "TODO": {
            "background": "#0F0",
            "foreground": "#000",
            "icon": "check",
            "type": "text",
            "gutterIcon": true
        }
    },
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "typescript.suggest.paths": false,
    "window.menuBarVisibility": "hidden",
    "window.restoreWindows": "none",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#1073cf2d",
        "editor.lineHighlightBorder": "#9fced11f",
        "editorIndentGuide.activeBackground": "#000",
        "editorIndentGuide.background": "#000",
        "terminal.ansiBlack": "#000",
        "terminal.ansiBrightBlack": "#fff",
        "terminal.ansiBrightRed": "#fd6464",
        "terminal.ansiGreen": "#00ff00",
        "terminal.ansiRed": "#ff0000",
        "terminal.ansiWhite": "#fff",
        "terminal.ansiYellow": "#ffaa00",
        "terminal.background": "#101010",
        "terminal.border": "#888",
        "terminal.foreground": "#fff"
    },
    "workbench.editor.centeredLayoutAutoResize": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.mouseBackForwardToNavigate": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.enableExperiments": false,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "python.defaultInterpreterPath": "/home/waldir/.local/bin/bpython",
    "gitweblinks.preferredRemoteName": "ocbe-uio",
    "kotlin.languageServer.enabled": false,
    "kotlin.debugAdapter.enabled": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 3,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.focusMode": "singleClick",
    "terminal.integrated.tabs.title": "${process}${sequence}",
    "r.source.focus": "terminal",
    "terminal.integrated.cursorBlinking": true,
    "editor.cursorBlinking": "phase",
    "gitweblinks.defaultBranch": "develop",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.cursorWidth": 3,
    "editor.find.loop": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestionsDelay": 0,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false
    }
}
