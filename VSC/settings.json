{
    // Language-specific
    "[git-commit]": {
        "editor.rulers": [
            {
                "color": "#ff0000",
                "column": 50
            }
        ]
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.rulers": []
    },
    "alignment.chars": {
        "<-": {
            "spaceAfter": 1,
            "spaceBefore": 1
        }
    },
    "cSpell.enabled": false,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "graphql",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "jupyter",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "python",
        "pug",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "swift",
        "text",
        "typescript",
        "typescriptreact",
        "vue",
        "yaml",
        "yml",
        "r"
    ],
    "comment-divider.length": 60,
    "comment-divider.mainHeaderAlign": "left",
    "comment-divider.mainHeaderFiller": "=",
    "comment-divider.mainHeaderHeight": "line",
    "comment-divider.subheaderAlign": "left",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "diffEditor.wordWrap": "off",
    "editor.autoClosingOvertype": "always",
    "editor.autoClosingQuotes": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "phase",
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.fontWeight": "bold",
    "editor.guides.bracketPairs": false,
    "editor.inlayHints.enabled": false,
    "editor.minimap.enabled": false,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "left",
    "editor.minimap.size": "fit",
    "editor.mouseWheelZoom": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "all",
    "editor.rulers": [
        {
            "color": "#ff0000",
            "column": 80
        }
    ],
    "editor.scrollBeyondLastColumn": 0,
    "editor.showFoldingControls": "always",
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "top",
    "editor.tabSize": 2,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                // Find scope values by running the following on the code file:
                // Developer: Inspect Editor Tokens and Scopes
                "scope": [
                    "meta.function-call.arguments.r",
                    "keyword.operator.assignment.r",
                    "punctuation.separator.parameters.r"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#f29668"
                }
            },
            {
                "scope": [
                    "constant.language.r"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#7e7e7e"
                }
            },
            {
                "scope": [
                    "constant.numeric.float.decimal.r"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#5153b3"
                }
            },
            {
                "scope": [
                    "support.function.r"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#4381c9"
                }
            },
            {
                "scope": [
                    "variable.parameter.r",
                    "variable.other.r"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#dfeeff"
                }
            }
        ]
    },
    "editor.wordWrap": "off",
    "explorer.compactFolders": false,
    "files.associations": {
        "*.docker": "Dockerfile"
    },
    "files.autoGuessEncoding": true,
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git-graph.commitDetailsView.location": "Docked to Bottom",
    "git-graph.dialog.createBranch.checkOut": true,
    "git-graph.repository.commits.fetchAvatars": true,
    "git-graph.repository.fetchAndPrune": true,
    "git-graph.showStatusBarItem": false,
    "git.autofetch": true,
    "git.checkoutType": [
        "local"
    ],
    "git.suggestSmartCommit": false,
    "html.preview.doubleClickToSwitchToEditor": false,
    "julia.enableTelemetry": false,
    "julia.symbolCacheDownload": true,
    "latex-workshop.bibtex-format.tab": "tab",
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.outDir": "./",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.outline.commands": [],
    "latex-workshop.view.pdf.viewer": "tab",
    "markdown.extension.print.theme": "dark",
    "markdown.extension.tableFormatter.enabled": true,
    "markdown.extension.toc.levels": "1..1",
    "markdown.extension.toc.orderedList": true,
    "markdown.marp.enableHtml": true,
    "markdown.marp.exportType": "html",
    "markdown.marp.themes": [
        "./themes/uio-light.css",
        "./themes/uio-dark.css"
    ],
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "notebook.lineNumbers": "on",
    "outline.icons": false,
    "r.alwaysUseActiveTerminal": true,
    "r.bracketedPaste": true,
    "r.lsp.diagnostics": false,
    "r.lsp.promptToInstall": false,
    "r.rpath.linux": "/usr/bin/R",
    "r.rterm.linux": "/usr/bin/radian",
    "r.sessionWatcher": true,
    "scm.defaultViewMode": "tree",
    "security.workspace.trust.untrustedFiles": "open",
    "task.saveBeforeRun": "prompt",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.hideCondition": "never",
    "terminal.integrated.tabs.location": "left",
    "terminal.integrated.tabs.showActiveTerminal": "always",
    "todo-tree.general.revealBehaviour": "start of todo",
    "todo-tree.general.statusBar": "tags",
    "todo-tree.general.statusBarClickBehaviour": "reveal",
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "TEMP",
        "ASK",
        "SUGGEST",
        "[ ]",
        "[x]"
    ],
    "todo-tree.highlights.customHighlight": {
        "ASK": {
            "background": "#FFCA02",
            "foreground": "black",
            "icon": "question",
            "iconColour": "#FFCA02"
        },
        "DONE": {
            "foreground": "green"
        },
        "FIXME": {
            "background": "red",
            "foreground": "white",
            "icon": "alert",
            "iconColour": "red"
        },
        "SUGGEST": {
            "background": "#FFCA02",
            "foreground": "black",
            "icon": "light-bulb",
            "iconColour": "#FFCA02"
        },
        "TEMP": {
            "background": "#707070",
            "foreground": "black",
            "icon": "clock",
            "iconColour": "gray",
            "type": "line"
        },
        "TODO": {
            "background": "green",
            "foreground": "black",
            "icon": "check"
        }
    },
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "typescript.suggest.paths": false,
    "window.menuBarVisibility": "hidden",
    "window.restoreWindows": "none",
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#1073cf2d",
        "editor.lineHighlightBorder": "#9fced11f",
        "editorIndentGuide.activeBackground": "#000",
        "editorIndentGuide.background": "#000",
        "terminal.ansiBlack": "#000",
        "terminal.ansiBrightBlack": "#fff",
        "terminal.ansiBrightRed": "#fd6464",
        "terminal.ansiGreen": "#00ff00",
        "terminal.ansiRed": "#ff0000",
        "terminal.ansiWhite": "#fff",
        "terminal.ansiYellow": "#ffaa00",
        "terminal.background": "#101010",
        "terminal.border": "#888",
        "terminal.foreground": "#fff"
    },
    "workbench.colorTheme": "Monokai Dimmed",
    "workbench.editor.centeredLayoutAutoResize": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.mouseBackForwardToNavigate": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.scrollToSwitchTabs": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.enableExperiments": false,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always"
}
