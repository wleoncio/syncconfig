[user]
	email = w.l.netto@medisin.uio.no
	name = Waldir Leoncio
[alias]
	df = diff
	dff = diff --word-diff=color
	dfc = diff --cached
	dffc = diff --cached --word-diff=color
	lg = log --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all -n 15
	lgg = log --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
	lgs = log --graph --pretty=short --abbrev-commit --stat
	lgss = log --graph --pretty=short --abbrev-commit --shortstat
	forget = !sh -c 'git filter-branch --index-filter "git rm -rf --cached --ignore-unmatch ${1}" HEAD' -
	countcomm = rev-list --count
	co = checkout
	cb = checkout -b
	db = branch -d
	drb = push -d
	aa = add --update
	aaa = add -A
	ap = add -p
	unstage = restore --staged .
	rp = restore -p
	cm = commit
	cmf = commit --fixup
	cms = commit --squash
	cmm = commit --message
	cma = commit --amend
	rb = rebase -i --autosquash
	mg = !sh -c 'mergeIntoDevelop.sh'
	s = status
	ls = status
	ci = !sh -c 'git checkout -b issue-$1' -
	di = !sh -c 'git branch -d issue-$1' -
	mi = !sh -c 'git checkout develop && git merge issue-$1 && git branch -d issue-$1' -
	history = log -p --
	fap = fetch --all --prune
	latexdiff = difftool -t latexdiff
	pa = push --all
	deposit = stash push --message
	withdraw = stash pop
	unstage = restore --staged
[core]
	editor = vim
	autocrlf = input
[credential]
  helper = store
[color]
	ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[help]
	autocorrect = 1
[merge]
	ff = no
[pull]
	ff = yes
[init]
	defaultBranch = develop
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"
[difftool "latexdiff"]
	cmd = git-latexdiff-helper \"$LOCAL\" \"$REMOTE\"
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://github.uio.no"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
