[user]
	email = w.l.netto@medisin.uio.no
	name = Waldir Leoncio
[alias]
	df = diff
	dff = diff --word-diff=color
	dfc = diff --cached
	dffc = diff --cached --word-diff=color
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all -n 15
	lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
	forget = !sh -c 'git filter-branch --index-filter "git rm -rf --cached --ignore-unmatch ${1}" HEAD' -
	countcomm = rev-list --count
	co = checkout
	cb = checkout -b
	db = branch -d
	drb = push -d
	aa = add -A
	ap = add -p
	cm = commit
	cmm = commit -m
	cam = commit -am
	cma = commit --amend
	s = status
	ci = !sh -c 'git checkout -b issue-$1' -
	di = !sh -c 'git branch -d issue-$1' -
	mi = !sh -c 'git checkout develop && git merge issue-$1 && git branch -d issue-$1' -
	hist = log -p --
	fap = fetch --all --prune
[core]
	editor = vim
[credential]
    helper = store
[color]
	ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[help]
	autocorrect = 1
[merge]
	ff = no
[pull]
	ff = yes
[init]
	defaultBranch = develop
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
