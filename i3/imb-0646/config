# Quick app launcher
set $mode_launcher Launch: [f]irefox [e]volution [t]eams [c]ommunicate [p]avucontrol [n]emo [w]hatsdesk
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
	bindsym f exec firefox
	bindsym e exec evolution
	bindsym t exec /var/lib/flatpak/app/com.github.IsmaelMartinez.teams_for_linux/x86_64/stable/active/files/teams-for-linux/teams-for-linux
	bindsym c exec evolution & teams & whatsdesk &
	bindsym p exec pavucontrol
	bindsym n exec nemo
	bindsym w exec whatsdesk

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# Combinations for shutdown, reboot, lock screen

set $mode_system System (l)ogout, (r)eboot, (s)hutdown
bindsym $mod+Shift+q mode "$mode_system"
mode "$mode_system" {
    bindsym l exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

