# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	font pango:DejaVu Sans 10
	status_command i3status
	workspace_min_width 330
	output DP-1
	output DP-2
	tray_output primary
	position top
	bindsym button3 exec gsimplecal
	bindsym button2 exec pavucontrol
	colors {
		# <colorclass>		<border> 	<bg>	<text>
		focused_workspace	$uiored		$uiored	$uiowhite
		active_workspace	$uiogray	$uiogray #000000
		inactive_workspace	#333333		#222222	#888888
		urgent_workspace	$uiored		#ffff00	#000000
		binding_mode		#2f343a		#900000	#ffffff
	}
}

