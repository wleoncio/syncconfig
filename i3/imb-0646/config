exec --no-startup-id i3-msg 'workspace $ws2; workspace $ws4; exec sleep 5; exec gnome-terminal --command="$HOME/Programs/myScripts/uiosync.sh pull"; exec libreoffice "$HOME/UiO/Docs/Adm/Work rotation.ods"; exec evolution'
